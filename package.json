{
  "name": "otocyon",
  "description": "My first restify project",
  "version": "1.0.0",
  "private": true,
  "author": {
    "name": "Matheus Henrique",
    "email": "matheushenriqueplus99@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/matheus2x/otocyon.git"
  },
  "license": "MIT",
  "licenses": [
    {
      "type": "MIT",
      "url": "https://www.mit.edu/~amini/LICENSE.md"
    }
  ],
  "homepage": "https://github.com/matheus2x/otocyon#readme",
  "bugs": {
    "url": "https://github.com/matheus2x/otocyon#issues"
  },
  "scripts": {
    "build": "tsc",
    "prod:start": "npm run build && npm run start",
		"start": "node build/index.js",
    "dev": "tsnd --respawn ./src/index.ts",
    "lint": "eslint src --max-warnings=0",
    "prepare": "husky install",
    "test": "jest --maxWorkers=50%",
    "test:watch": "npm test -- --watch",
    "test:unit": "npm test -- -c jest-unit-config.js",
    "test:integration": "npm test -- -c jest-integration-config.js",
    "test:ci": "jest --runInBand --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test:ci"
    }
  },
  "lint-staged": {
    "src/**/*": [
      "npm run lint --fix",
      "npm run test -- --findRelatedTests --bail"
    ]
  },
  "dependencies": {
    "axios": "^0.21.4",
    "cheerio": "^1.0.0-rc.10",
    "dotenv": "^10.0.0",
    "joi": "^17.6.0",
    "ramda": "^0.28.0",
    "restify": "^8.5.1"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.30",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.9.1",
    "@types/ramda": "^0.28.7",
    "@types/restify": "^8.5.2",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.2",
    "jest": "^27.1.1",
    "lint-staged": "^11.1.2",
    "prettier": "^2.4.0",
    "ts-jest": "^27.0.5",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.2"
  }
}
